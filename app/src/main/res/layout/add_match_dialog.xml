<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Match Data"
        android:textSize="20sp"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Group"/>


    <EditText
        android:id="@+id/home_team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Home Team Name"/>

    <EditText
        android:id="@+id/away_team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Away Team Name"/>

    <EditText
        android:id="@+id/home_team_logo_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Home Team Logo Url"/>

    <EditText
        android:id="@+id/away_team_logo_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Away Team Logo Url"/>

    <EditText
        android:id="@+id/match_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Match Date"/>

    <EditText
        android:id="@+id/match_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Match Time"/>

    <Button
        android:id="@+id/submit_match_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"/>

</LinearLayout>