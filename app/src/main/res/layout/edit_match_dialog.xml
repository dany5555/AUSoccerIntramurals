<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Match"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/edit_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Group Name"/>

    <EditText
        android:id="@+id/home_team_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Home Team Name"/>

    <EditText
        android:id="@+id/away_team_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Away Team Name"/>

    <EditText
        android:id="@+id/home_team_logo_url_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Home Team Logo Url"/>

    <EditText
        android:id="@+id/away_team_logo_url_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Away Team Logo Url"/>

    <EditText
        android:id="@+id/match_date_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Match Date"/>

    <EditText
        android:id="@+id/match_time_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Match Time"/>

    <Button
        android:id="@+id/submit_edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"/>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"/>

</LinearLayout>