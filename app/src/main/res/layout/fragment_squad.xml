<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SquadFragment"
    android:orientation="vertical">




                <RelativeLayout
                    android:id="@+id/goalkeepers_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/goalkeepers_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goalkeepers"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <ListView
                        android:id="@+id/goalkeepers_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/goalkeepers_header">

                    </ListView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/defenders_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/defenders_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Defenders"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <ListView
                        android:id="@+id/defenders_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/defenders_header">

                    </ListView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/midfielders_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/midfielders_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Midfielders"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <ListView
                        android:id="@+id/midfielders_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/midfielders_header">

                    </ListView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/forwards_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/forwards_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forwards"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <ListView
                        android:id="@+id/forwards_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/forwards_header">

                    </ListView>


                </RelativeLayout>









</LinearLayout>